{
  "$schema": "https://opencode.ai/config.json",
  "theme": "cursor",
  "model": "opencode/glm-4.7-free",
  "agent": {
    "build": {
      "model": "github-copilot/gpt-5.2"
    },
    "plan": {
      "model": "github-copilot/gpt-5.2",
      "permission": {
        "edit": {
          "*.md": "allow"
        },
        "write": {
          "*.md": "allow"
        }
      }
    }
  },
  "default_agent": "chat",
  "mcp": {
    "osgrep": {
      "type": "local",
      "command": ["osgrep", "mcp"],
      "enabled": true
    },
    "augment-context-engine": {
      "type": "local",
      "command": ["auggie", "--mcp"],
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "headers": {}
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "awk *": "allow",
      "bun pm ls*": "allow",
      "cat *": "allow",
      "curl -I *": "allow",
      "curl -s *": "allow",
      "curl -sI *": "allow",
      "date *": "allow",
      "date*": "allow",
      "df *": "allow",
      "diskutil list*": "allow",
      "dmesg*": "allow",
      "docker ps*": "allow",
      "du *": "allow",
      "echo *": "allow",
      "env *": "allow",
      "env*": "allow",
      "find *": "allow",
      "git branch*": "allow",
      "git describe*": "allow",
      "git diff*": "allow",
      "git grep*": "allow",
      "git log*": "allow",
      "git ls-files*": "allow",
      "git remote -v*": "allow",
      "git rev-parse*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "grep *": "allow",
      "head *": "allow",
      "id *": "allow",
      "id*": "allow",
      "kubectl describe*": "allow",
      "kubectl get*": "allow",
      "ls *": "allow",
      "ls*": "allow",
      "lsblk*": "allow",
      "lscpu*": "allow",
      "lsof*": "allow",
      "mount*": "allow",
      "netstat*": "allow",
      "npm ls*": "allow",
      "pip list*": "allow",
      "pip show*": "allow",
      "pnpm ls*": "allow",
      "poetry show*": "allow",
      "printenv *": "allow",
      "printenv*": "allow",
      "ps *": "allow",
      "pwd *": "allow",
      "pwd*": "allow",
      "rg *": "allow",
      "sed -n *": "allow",
      "ss*": "allow",
      "stat *": "allow",
      "tail *": "allow",
      "top*": "allow",
      "type *": "allow",
      "uname *": "allow",
      "uname*": "allow",
      "uptime *": "allow",
      "uptime*": "allow",
      "wc *": "allow",
      "wget -S --spider *": "allow",
      "wget --spider *": "allow",
      "whereis *": "allow",
      "which *": "allow",
      "whoami *": "allow",
      "whoami*": "allow",
      "yarn list*": "allow",
      "chown -R *": "deny",
      "chmod -R *": "deny",
      "curl * | sh*": "deny",
      "curl *|sh*": "deny",
      "dd *": "deny",
      "diskutil apfs delete*": "deny",
      "diskutil erase*": "deny",
      "diskutil partition*": "deny",
      "doas *": "deny",
      "docker system prune*": "deny",
      "git clean -fd*": "deny",
      "git commit*": "deny",
      "git push*": "deny",
      "git reset --hard*": "deny",
      "halt*": "deny",
      "kubectl apply*": "deny",
      "kubectl delete*": "deny",
      "mkfs*": "deny",
      "reboot*": "deny",
      "rm *": "ask",
      "rm -fr *": "deny",
      "rm -rf *": "deny",
      "shutdown*": "deny",
      "su *": "deny",
      "sudo *": "deny",
      "terraform apply*": "deny",
      "terraform destroy*": "deny",
      "wget * | sh*": "deny",
      "wget *|sh*": "deny"
    }
  }
}
