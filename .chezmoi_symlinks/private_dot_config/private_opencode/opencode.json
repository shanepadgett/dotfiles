{
  "$schema": "https://opencode.ai/config.json",
  "theme": "cursor",
  "model": "github-copilot/gpt-5.2-codex",
  "agent": {
    "build": {
      "model": "openai/gpt-5.2-codex"
    },
    "plan": {
      "model": "openai/gpt-5.2-codex",
      "permission": {
        "edit": {
          "*.md": "allow"
        },
        "write": {
          "*.md": "allow"
        }
      }
    }
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "plugin": [
    "opencode-antigravity-auth@beta",
    "@mohak34/opencode-notifier@latest",
    "@franlol/opencode-md-table-formatter@0.0.3",
    "opencode-pty"
  ],
  "mcp": {
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "headers": {}
    },
    "osgrep": {
      "type": "local",
      "command": ["osgrep", "mcp"],
      "enabled": false
    },
    "augment-context-engine": {
      "type": "local",
      "command": ["auggie", "--mcp"],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false
    }
  },
  "provider": {
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "thinkingLevel": "low"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": {
              "thinkingLevel": "minimal"
            },
            "low": {
              "thinkingLevel": "low"
            },
            "medium": {
              "thinkingLevel": "medium"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        }
      }
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "awk *": "allow",
      "bun pm ls*": "allow",
      "cat *": "allow",
      "curl -I *": "allow",
      "curl -s *": "allow",
      "curl -sI *": "allow",
      "date *": "allow",
      "date*": "allow",
      "df *": "allow",
      "diskutil list*": "allow",
      "dmesg*": "allow",
      "docker ps*": "allow",
      "du *": "allow",
      "echo *": "allow",
      "env *": "allow",
      "env*": "allow",
      "find *": "allow",
      "git branch*": "allow",
      "git describe*": "allow",
      "git diff*": "allow",
      "git grep*": "allow",
      "git log*": "allow",
      "git ls-files*": "allow",
      "git remote -v*": "allow",
      "git rev-parse*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "grep *": "allow",
      "head *": "allow",
      "id *": "allow",
      "id*": "allow",
      "kubectl describe*": "allow",
      "kubectl get*": "allow",
      "ls *": "allow",
      "ls*": "allow",
      "lsblk*": "allow",
      "lscpu*": "allow",
      "lsof*": "allow",
      "mount*": "allow",
      "netstat*": "allow",
      "npm ls*": "allow",
      "pip list*": "allow",
      "pip show*": "allow",
      "pnpm ls*": "allow",
      "poetry show*": "allow",
      "printenv *": "allow",
      "printenv*": "allow",
      "ps *": "allow",
      "pwd *": "allow",
      "pwd*": "allow",
      "rg *": "allow",
      "sed -n *": "allow",
      "ss*": "allow",
      "stat *": "allow",
      "tail *": "allow",
      "top*": "allow",
      "type *": "allow",
      "uname *": "allow",
      "uname*": "allow",
      "uptime *": "allow",
      "uptime*": "allow",
      "wc *": "allow",
      "wget -S --spider *": "allow",
      "wget --spider *": "allow",
      "whereis *": "allow",
      "which *": "allow",
      "whoami *": "allow",
      "whoami*": "allow",
      "yarn list*": "allow",
      "chown -R *": "deny",
      "chmod -R *": "deny",
      "curl * | sh*": "deny",
      "curl *|sh*": "deny",
      "dd *": "deny",
      "diskutil apfs delete*": "deny",
      "diskutil erase*": "deny",
      "diskutil partition*": "deny",
      "doas *": "deny",
      "docker system prune*": "deny",
      "git clean -fd*": "deny",
      "git commit*": "ask",
      "git push*": "deny",
      "git reset --hard*": "deny",
      "halt*": "deny",
      "kubectl apply*": "deny",
      "kubectl delete*": "deny",
      "mkfs*": "deny",
      "reboot*": "deny",
      "rm *": "ask",
      "rm -fr *": "deny",
      "rm -rf *": "ask",
      "shutdown*": "deny",
      "su *": "deny",
      "sudo *": "deny",
      "terraform apply*": "deny",
      "terraform destroy*": "deny",
      "wget * | sh*": "deny",
      "wget *|sh*": "deny"
    }
  }
}
