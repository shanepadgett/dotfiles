{
  "$schema": "https://opencode.ai/config.json",
  "theme": "custom",
  "model": "opencode/glm-4.7-free",
  "default_agent": "chat",
  "agent": {
    "plan": {
      "model": "github-copilot/gpt-5.2"
    },
    "build": {
      "model": "github-copilot/claude-opus-4.5"
    },
    "explore": {
      "model": "github-copilot/gemini-3-flash-preview",
      "disable": true
    }
  },
  "mcp": {
    "osgrep": {
      "type": "local",
      "command": ["osgrep", "mcp"],
      "enabled": true
    },
    "augment-context-engine": {
      "type": "local",
      "command": ["auggie", "--mcp"],
      "enabled": true
    }
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": false
    },
    "scroll_speed": 0.5
  }
}
