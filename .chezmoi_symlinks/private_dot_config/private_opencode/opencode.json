{
  "$schema": "https://opencode.ai/config.json",
  "theme": "cursor",
  "model": "openai/gpt-5.3-codex",
  "agent": {
    "plan": {
      "permission": {
        "edit": {
          "*.md": "allow"
        },
        "write": {
          "*.md": "allow"
        }
      }
    }
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "plugin": [
    "opencode-google-antigravity-auth@latest",
    "@mohak34/opencode-notifier@latest",
    "@franlol/opencode-md-table-formatter@0.0.3",
    "opencode-pty"
  ],
  "mcp": {
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "headers": {}
    },
    "osgrep": {
      "type": "local",
      "command": ["osgrep", "mcp"],
      "enabled": false
    },
    "augment-context-engine": {
      "type": "local",
      "command": ["auggie", "--mcp"],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false
    }
  },
  "provider": {
    "google": {
      "npm": "@ai-sdk/google",
      "models": {
        "gemini-3-pro-preview": {
          "id": "gemini-3-pro-preview",
          "name": "Gemini 3 Pro",
          "release_date": "2025-11-18",
          "reasoning": true,
          "limit": { "context": 1000000, "output": 64000 },
          "cost": { "input": 2, "output": 12, "cache_read": 0.2 },
          "modalities": {
            "input": ["text", "image", "video", "audio", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "low",
                  "includeThoughts": true
                }
              }
            },
            "medium": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "medium",
                  "includeThoughts": true
                }
              }
            },
            "high": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "high",
                  "includeThoughts": true
                }
              }
            }
          }
        },
        "gemini-3-flash": {
          "id": "gemini-3-flash",
          "name": "Gemini 3 Flash",
          "release_date": "2025-12-17",
          "reasoning": true,
          "limit": { "context": 1048576, "output": 65536 },
          "cost": { "input": 0.5, "output": 3, "cache_read": 0.05 },
          "modalities": {
            "input": ["text", "image", "video", "audio", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "minimal",
                  "includeThoughts": true
                }
              }
            },
            "low": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "low",
                  "includeThoughts": true
                }
              }
            },
            "medium": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "medium",
                  "includeThoughts": true
                }
              }
            },
            "high": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "high",
                  "includeThoughts": true
                }
              }
            }
          }
        },
        "gemini-2.5-flash-lite": {
          "id": "gemini-2.5-flash-lite",
          "name": "Gemini 2.5 Flash Lite",
          "reasoning": false
        },
        "gemini-claude-sonnet-4-5-thinking": {
          "id": "gemini-claude-sonnet-4-5-thinking",
          "name": "Claude Sonnet 4.5",
          "reasoning": true,
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "none": {
              "reasoning": false,
              "options": { "thinkingConfig": { "includeThoughts": false } }
            },
            "low": {
              "options": {
                "thinkingConfig": {
                  "thinkingBudget": 4000,
                  "includeThoughts": true
                }
              }
            },
            "medium": {
              "options": {
                "thinkingConfig": {
                  "thinkingBudget": 16000,
                  "includeThoughts": true
                }
              }
            },
            "high": {
              "options": {
                "thinkingConfig": {
                  "thinkingBudget": 32000,
                  "includeThoughts": true
                }
              }
            }
          }
        },
        "gemini-claude-opus-4-6-thinking": {
          "id": "gemini-claude-opus-4.6-thinking",
          "name": "Claude Opus 4.6",
          "release_date": "2025-11-24",
          "reasoning": true,
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "options": {
                "thinkingConfig": {
                  "thinkingBudget": 4000,
                  "includeThoughts": true
                }
              }
            },
            "medium": {
              "options": {
                "thinkingConfig": {
                  "thinkingBudget": 16000,
                  "includeThoughts": true
                }
              }
            },
            "high": {
              "options": {
                "thinkingConfig": {
                  "thinkingBudget": 32000,
                  "includeThoughts": true
                }
              }
            }
          }
        }
      }
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "awk *": "allow",
      "bun pm ls*": "allow",
      "cat *": "allow",
      "curl -I *": "allow",
      "curl -s *": "allow",
      "curl -sI *": "allow",
      "date *": "allow",
      "date*": "allow",
      "df *": "allow",
      "diskutil list*": "allow",
      "dmesg*": "allow",
      "docker ps*": "allow",
      "du *": "allow",
      "echo *": "allow",
      "env *": "allow",
      "env*": "allow",
      "find *": "allow",
      "git add*": "allow",
      "git branch*": "allow",
      "git describe*": "allow",
      "git diff*": "allow",
      "git grep*": "allow",
      "git log*": "allow",
      "git ls-files*": "allow",
      "git remote -v*": "allow",
      "git rev-parse*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "gofmt *": "allow",
      "go mod tidy": "allow",
      "go test *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "id *": "allow",
      "id*": "allow",
      "kubectl describe*": "allow",
      "kubectl get*": "allow",
      "ls *": "allow",
      "ls*": "allow",
      "lsblk*": "allow",
      "lscpu*": "allow",
      "lsof*": "allow",
      "mise run dev": "allow",
      "mise run build": "allow",
      "mise run bruno*": "allow",
      "mkdir*": "allow",
      "mount*": "allow",
      "netstat*": "allow",
      "npm ls*": "allow",
      "pip list*": "allow",
      "pip show*": "allow",
      "pnpm ls*": "allow",
      "poetry show*": "allow",
      "printenv *": "allow",
      "printenv*": "allow",
      "ps *": "allow",
      "pwd *": "allow",
      "pwd*": "allow",
      "rg *": "allow",
      "sed -n *": "allow",
      "ss*": "allow",
      "stat *": "allow",
      "tail *": "allow",
      "top*": "allow",
      "type *": "allow",
      "uname *": "allow",
      "uname*": "allow",
      "uptime *": "allow",
      "uptime*": "allow",
      "wc *": "allow",
      "wget -S --spider *": "allow",
      "wget --spider *": "allow",
      "whereis *": "allow",
      "which *": "allow",
      "whoami *": "allow",
      "whoami*": "allow",
      "yarn list*": "allow",
      "chown -R *": "deny",
      "chmod -R *": "deny",
      "curl * | sh*": "deny",
      "curl *|sh*": "deny",
      "dd *": "deny",
      "diskutil apfs delete*": "deny",
      "diskutil erase*": "deny",
      "diskutil partition*": "deny",
      "doas *": "deny",
      "docker system prune*": "deny",
      "git clean -fd*": "deny",
      "git commit*": "ask",
      "git push*": "deny",
      "git reset --hard*": "deny",
      "halt*": "deny",
      "kubectl apply*": "deny",
      "kubectl delete*": "deny",
      "mkfs*": "deny",
      "reboot*": "deny",
      "rm *": "ask",
      "rm -fr *": "deny",
      "rm -rf *": "ask",
      "shutdown*": "deny",
      "su *": "deny",
      "sudo *": "deny",
      "terraform apply*": "deny",
      "terraform destroy*": "deny",
      "wget * | sh*": "deny",
      "wget *|sh*": "deny"
    }
  }
}
