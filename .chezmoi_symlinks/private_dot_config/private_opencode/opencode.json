{
  "$schema": "https://opencode.ai/config.json",
  "theme": "cursor",
  "model": "opencode/glm-4.7-free",
  "agent": {
    "build": {
      "model": "github-copilot/gpt-5.2"
    },
    "plan": {
      "model": "github-copilot/gpt-5.2",
      "permission": {
        "edit": {
          "*.md": "allow"
        },
        "write": {
          "*.md": "allow"
        }
      }
    }
  },
  "default_agent": "chat",
  "mcp": {
    "osgrep": {
      "type": "local",
      "command": ["osgrep", "mcp"],
      "enabled": true
    },
    "augment-context-engine": {
      "type": "local",
      "command": ["auggie", "--mcp"],
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "headers": {}
    }
  },
  "permission": {
    "bash": {
      "bash -c *": "ask",
      "bun ": "ask",
      "chmod -R ": "ask",
      "chflags -R *": "ask",
      "chown -R ": "ask",
      "deno ": "ask",
      "doas *": "ask",
      "docker ": "ask",
      "docker rm -f ": "ask",
      "docker rmi ": "ask",
      "docker system prune": "ask",
      "git ": "ask",
      "helm ": "ask",
      "ifconfig ": "ask",
      "killall ": "ask",
      "kubectl ": "ask",
      "launchctl ": "ask",
      "networksetup ": "ask",
      "node ": "ask",
      "nft ": "ask",
      "open ": "ask",
      "osascript ": "ask",
      "pfctl ": "ask",
      "python ": "ask",
      "python3 ": "ask",
      "route ": "ask",
      "rsync ": "ask",
      "scp ": "ask",
      "ssh ": "ask",
      "sudo ": "ask",
      "systemsetup ": "ask",
      "terraform ": "ask",
      "wget * | sh": "deny",
      "wget |sh": "deny",
      "curl * | sh": "deny",
      "curl |sh": "deny",
      "dd ": "deny",
      "diskutil apfs delete": "deny",
      "diskutil erase": "deny",
      "diskutil partition": "deny",
      "git push -f": "deny",
      "git push --force": "deny",
      "halt": "deny",
      "kill -9 1": "deny",
      "mkfs": "deny",
      "reboot": "deny",
      "rm ": "deny",
      "rm -fr ": "deny",
      "rm -rf ": "deny",
      "rmdir ": "deny",
      "shutdown": "deny",
      "su ": "deny",
      "mv /": "deny",
      "mv -f /": "deny",
      "cp -R /": "deny",
      "cp -a /": "deny"
    }
  }
}
