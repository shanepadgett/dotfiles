{
  "$schema": "https://opencode.ai/config.json",
  "theme": "cursor",
  "model": "opencode/glm-4.7-free",
  "agent": {
    "build": {
      "model": "github-copilot/gpt-5.2"
    },
    "plan": {
      "model": "github-copilot/gpt-5.2",
      "permission": {
        "edit": {
          "*.md": "allow"
        },
        "write": {
          "*.md": "allow"
        }
      }
    }
  },
  "default_agent": "chat",
  "mcp": {
    "osgrep": {
      "type": "local",
      "command": ["osgrep", "mcp"],
      "enabled": true
    },
    "augment-context-engine": {
      "type": "local",
      "command": ["auggie", "--mcp"],
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "headers": {}
    }
  }
}
