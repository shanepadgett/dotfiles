{
  "$schema": "https://opencode.ai/config.json",
  "theme": "cursor",
  "model": "opencode/glm-4.7-free",
  "default_agent": "chat",
  "mcp": {
    "osgrep": {
      "type": "local",
      "command": ["osgrep", "mcp"],
      "enabled": true
    },
    "augment-context-engine": {
      "type": "local",
      "command": ["auggie", "--mcp"],
      "enabled": true
    }
  }
}
