# Add deno completions to search path
if [[ ":$FPATH:" != *":/Users/shanepadgett/.zsh/completions:"* ]]; then export FPATH="/Users/shanepadgett/.zsh/completions:$FPATH"; fi

# NVM Configuration
export NVM_DIR="$HOME/.nvm"
[ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion

export PATH="$HOME/.local/bin:$PATH"

# Exports here:
export EDITOR="zed --wait"
export GITHUB_USERNAME="shanepadgett"
export DO_NOT_TRACK=1

# Chezmoi
alias cm="chezmoi"
alias cma="chezmoi add"
alias cme="chezmoi edit --apply"
alias cmes="chezmoi-symlink edit"
alias cmdf="chezmoi diff"
alias cmap="chezmoi -v apply"
alias cmu="chezmoi update"
alias cz="cme ~/.zshrc"

# Directory Nav
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'

# Git
alias g='git'
alias ga='git add'
alias gaa='git add --all'
alias gc='git commit -m'
alias gca='git commit -am'
alias gp='git push'
alias gpl='git pull'
alias gst='git status'
alias gl='git log --oneline --graph --decorate'
alias gco='git checkout'
alias gb='git branch'
alias gbd='git branch -d'
alias gdf='git diff'
alias grh='git reset --hard'
alias grs='git restore'
alias grss='git restore --staged'
alias gcm='git checkout main || git checkout master'

# List
alias ll='ls -lah'
alias la='ls -A'

# File browsing
alias lc='less -N -S -R'

# Must remain at the end of this file
eval "$(zoxide init zsh)"
. "/Users/shanepadgett/.deno/env"
